set $screensaver /usr/bin/i3lock -c 002233
exec --no-startup-id xss-lock /usr/bin/i3lock -- -c 002233

bindsym Control+Mod1+Delete exec "$screensaver"
#bindsym $mod+l exec "$screensaver"

bindsym $mod+n exec i3-input -F 'rename workspace to "%s"' -P 'New name: '

# save last workspace - can toggle with mod+tab or mod+num_cur_ws
workspace_auto_back_and_forth yes
bindsym $mod+Tab workspace back_and_forth

# move current container to previous workspace and follow it
bindsym $mod+z move container to workspace back_and_forth; workspace back_and_forth
# moving workspaces across monitors
bindsym $mod+Shift+greater move workspace to output right
bindsym $mod+Shift+less move workspace to output left

# Mark window decorations with mark numbers
show_marks yes

set $mode_system System (l) lock, (e) logout, (r) reboot, (s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id "$screensaver", mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id "reboot", mode "default"
    bindsym s exec --no-startup-id "poweroff", mode "default"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_system"

mode "mark" {
        bindsym Shift+1 mark m1, mode "default"
        bindsym Shift+2 mark m2, mode "default"
        bindsym Shift+3 mark m3, mode "default"
        bindsym Shift+4 mark m4, mode "default"
        bindsym Shift+5 mark m5, mode "default"
        bindsym Shift+6 mark m6, mode "default"
        bindsym Shift+7 mark m7, mode "default"
        bindsym Shift+8 mark m8, mode "default"
        bindsym Shift+9 mark m9, mode "default"
        bindsym Shift+0 mark m0, mode "default"

        bindsym 1 [con_mark="m1"] focus, mode "default"
        bindsym 2 [con_mark="m2"] focus, mode "default"
        bindsym 3 [con_mark="m3"] focus, mode "default"
        bindsym 4 [con_mark="m4"] focus, mode "default"
        bindsym 5 [con_mark="m5"] focus, mode "default"
        bindsym 6 [con_mark="m6"] focus, mode "default"
        bindsym 7 [con_mark="m7"] focus, mode "default"
        bindsym 8 [con_mark="m8"] focus, mode "default"
        bindsym 9 [con_mark="m9"] focus, mode "default"
        bindsym 0 [con_mark="m0"] focus, mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+m mode "mark"

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

